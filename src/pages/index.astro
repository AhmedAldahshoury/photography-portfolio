---
import BaseLayout from '../layouts/BaseLayout.astro';
import albums from '../data/albums.generated.json';
import { cfImageUrl } from '../utils/cfImages';

const heroImages = albums.slice(0, 6);
const featuredLoop = albums.slice(0, 10);
---

<BaseLayout
  title="T7TFOS Photography â€” Cinematic Portfolio"
  description="A premium photography portfolio featuring editorial, travel, and cinematic collections."
>
  <section class="hero">
    <div class="container">
      <span class="badge">Professional Portfolio</span>
      <h1 class="hero-title">Cinematic stories in light, shadow, and atmosphere.</h1>
      <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
        <a class="btn" href="/albums">View Albums</a>
        <a class="btn" href="/contact">Book a Session</a>
      </div>
      <div class="hero-visuals">
        {heroImages.map((album) => (
          <img
            src={cfImageUrl(album.coverKey, { width: 600, quality: 76 })}
            alt={`${album.title} cover`}
            loading="lazy"
            decoding="async"
            width="500"
            height="350"
          />
        ))}
      </div>
    </div>
  </section>

  <section class="section album-loop">
    <div class="container">
      <div class="loop-header">
        <h2 class="section-title">Featured Album Loop</h2>
        <p class="section-subtitle">Hover to pause the rotation.</p>
      </div>
      <div class="loop-stage">
        <div class="loop-ring" style={`--total: ${featuredLoop.length};`}>
          {featuredLoop.map((album, index) => (
            <a
              class="loop-item"
              style={`--i: ${index};`}
              href={`/albums/${album.slug}`}
              aria-label={`Open ${album.title}`}
            >
              <img
                src={cfImageUrl(album.coverKey, { width: 400, quality: 72 })}
                alt={`${album.title} cover`}
                loading="lazy"
                decoding="async"
                width="320"
                height="320"
              />
            </a>
          ))}
        </div>
        <div class="loop-center">
          <span>Curated in motion</span>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
