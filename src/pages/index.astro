---
import BaseLayout from '../layouts/BaseLayout.astro';
import albums from '../data/albums.generated.json';
import { cfImageUrl } from '../utils/cfImages';

const heroImages = albums.slice(0, 6);
const heroLoopImages = [...heroImages, ...heroImages];
---

<BaseLayout
  title="T7TFOS Photography â€” Luxury Visual Storytelling"
  description="A premium photography portfolio for luxury brands, destinations, and private collectors."
>
  <section class="hero">
    <div class="container">
      <span class="badge">Luxury Photography Studio</span>
      <h1 class="hero-title">T7TFOS Photography</h1>
      <p class="hero-text" style="margin-top: 1rem;">
        Curated visual narratives defined by luminous detail, thoughtful composition, and a refined sense of place.
      </p>
      <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
        <a class="btn" href="/albums">Explore Albums</a>
        <a class="btn" href="/contact">Inquire for Commissions</a>
      </div>
      <div class="hero-visuals" style={`--item-count: ${heroImages.length};`}>
        <div class="hero-visuals-track">
          {heroLoopImages.map((album) => (
            <a class="hero-visuals-item" href={`/albums/${album.slug}`}>
              <img
                src={cfImageUrl(album.coverKey, { width: 600, quality: 76 })}
                alt={`${album.title} cover`}
                loading="lazy"
                decoding="async"
                width="500"
                height="350"
              />
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
