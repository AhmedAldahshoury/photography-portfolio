---
import { buildImageUrl } from '../utils/imageUrl';

const { album } = Astro.props;
---

<a class="card" href={`/albums/${album.slug}`}>
  <img
    src={buildImageUrl(album.coverImage, { width: 700, quality: 75 })}
    alt={`${album.title} cover`}
    loading="lazy"
    decoding="async"
    width="700"
    height="467"
  />
  <div class="card-body">
    <div class="badge">{album.year}</div>
    <h3 style="margin-top: 0.75rem;">{album.title}</h3>
    <p style="color: var(--muted); margin-top: 0.5rem;">{album.location}</p>
  </div>
</a>
